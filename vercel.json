{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ],
    "outputDirectory": "dist",
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/db.json"
        }
    }
}